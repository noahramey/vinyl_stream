.container
  .items.inner
    %header.major
      %h2 Shop
    .content
      - if @items.any?
        - @items.each do |item|
          .contact-method
            %span.icon.alt.fa-envelope
            %h3= item.name
            %span= item.description
            %br/
            %span $#{item.price}
            %br/
            = link_to "Add to Cart", item_path(item), method: 'patch', class: 'button small special'
      - else
        %h4 There are no items available for purchase at this time. Try again later.
